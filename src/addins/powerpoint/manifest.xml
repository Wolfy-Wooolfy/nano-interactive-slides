<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">
  <!-- NIS canonical manifest for PowerPoint -->
  <Id>d5fb3bcb-8f2f-4a1a-9e25-1a8b8fd8d6e7</Id>
  <Version>0.1.0.0</Version>
  <ProviderName>Wolfy-Wooolfy</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Nano Interactive Slides"/>
  <Description DefaultValue="Turn slides into living simulations."/>

  <!-- تأكد من وجود هذه الأيقونات داخل مشروع dev على نفس الـ port -->
  <IconUrl DefaultValue="https://localhost:3000/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/assets/icon-64.png"/>

  <SupportUrl DefaultValue="https://github.com/Wolfy-Wooolfy/nano-interactive-slides"/>

  <Hosts>
    <Host Name="Presentation"/>
  </Hosts>

  <!-- لازم 1.5 لأن الكود بيستخدم presentation.setSelectedSlides -->
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="PowerPointApi" MinVersion="1.5"/>
    </Sets>
  </Requirements>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://localhost:3000/taskpane.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>
</OfficeApp>
